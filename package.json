{
    "name": "moonscript",
    "displayName": "MoonScript",
    "description": "Working MoonScript support for vscode.",
    "version": "0.1.1",
    "publisher": "vgalaktionov",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "configuration": {
            "title": "Moonscript configuration",
            "properties": {
                "moonscript.enableLinting": {
                    "type": "boolean",
                    "default": true,
                    "description": "enable or disable linting"
                },
                "moonscript.moonpickPath": {
                    "type": "string",
                    "default": "moonpick",
                    "description": "Path to the moonpick executable"
                }
            }
        },
        "languages": [
            {
                "id": "moonscript",
                "aliases": [
                    "MoonScript",
                    "moonscript"
                ],
                "extensions": [
                    ".moon"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "moonscript",
                "scopeName": "source.moonscript",
                "path": "./syntaxes/moonscript.json"
            }
        ],
        "snippets": [
            {
                "language": "moonscript",
                "path": "./snippets/moonscript.json"
            }
        ]
    },
    "main": "./src/extension.js",
    "activationEvents": [
        "onLanguage:moonscript"
    ],
    "devDependencies": {
        "vscode": "^1.1.21"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/vgalaktionov/moonscript-vscode-extension.git"
    },
    "icon": "logo.png",
    "dependencies": {
        "execa": "^4.0.0"
    }
}
